{
  "name": "openjur-svelte",
  "version": "0.0.0",
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "node scripts/build.js",
    "precompile": "cross-env MODE=production yarn build",
    "compile": "electron-builder build --config electron-builder.config.js --dir --config.asar=false",
    "compile:ci": "electron-builder build --config electron-builder.config.js --dir --config.asar=false --publish never",
    "pretest": "yarn build",
    "dev": "node scripts/watch.js",
    "typecheck-main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck-preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck-renderer": "svelte-check --tsconfig packages/renderer/tsconfig.json",
    "check-types": "yarn typecheck-main && yarn typecheck-preload && yarn typecheck-renderer",
    "check-format": "prettier --check --plugin-search-dir=. ./**/*.{ts,svelte,css,js,cjs}",
    "format": "prettier --write --plugin-search-dir=. ./**/*.{ts,svelte,css,js,cjs}",
    "prepare": "husky install"
  },
  "browserslist": [
    "Chrome 96"
  ],
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.30",
    "@tsconfig/svelte": "^2.0.1",
    "@types/electron-devtools-installer": "2.2.0",
    "@typescript-eslint/eslint-plugin": "5.4.0",
    "cross-env": "7.0.3",
    "electron": "16.0.1",
    "electron-builder": "22.14.5",
    "electron-devtools-installer": "3.2.0",
    "husky": "^7.0.0",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.5.1",
    "svelte": "^3.44.1",
    "svelte-check": "^2.2.8",
    "svelte-preprocess": "^4.9.8",
    "tslib": "^2.3.1",
    "typescript": "4.5.2",
    "vite": "2.6.14"
  }
}
